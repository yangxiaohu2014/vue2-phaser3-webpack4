{
  "include": ["src/*", "src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "allowJs": true,
    "module": "CommonJs",
    "target": "ES2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "lib": ["dom", "es5", "es6", "es7", "es2015.promise"],
    "sourceMap": true,
    "pretty": true
  }
}
